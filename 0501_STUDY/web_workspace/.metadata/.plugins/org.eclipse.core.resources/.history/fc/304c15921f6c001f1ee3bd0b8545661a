<meta charset="UTF-8">
<title>sample10</title>
<script type="text/javascript">
	/* window.onload = function() {
		document.body.onmousedown = function(){
			alert('body 에서 마우스 버튼 눌렀음.');
		};
		document.body.onmousemove=function(event){
			console.log(event.x + ', '+ event.y)
		};
